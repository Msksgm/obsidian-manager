{
  "name": "obsidian-manager",
  "version": "1.0.0",
  "module": "src/main.ts",
  "type": "module",
  "bin": {
    "obsidian-manager": "./dist/obsidian-manager"
  },
  "scripts": {
    "build": "NODE_ENV=production bun build --compile --minify --sourcemap --bytecode ./src/main.ts --outfile ./dist/obsidian-manager",
    "clean": "rm -rf ./dist",
    "type-check": "tsc -noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest"
  },
  "keywords": ["obsidian", "macos", "sleep", "wake", "launchagent"],
  "author": "",
  "license": "ISC",
  "description": "CLI tool to manage Obsidian app with macOS sleep/wake events",
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/bun": "^1.2.23",
    "@types/eslint": "^9.6.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "deepmerge": "^4.3.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^60.5.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "pino": "^9.12.0",
    "pino-pretty": "^13.1.1"
  }
}
